set -e

cd {{frontend_dir}}

unzip {{frontend_artifact_id}}.zip

cp -r build/* /usr/share/nginx/html

export EDITOR_VERSION=`cat build/FULL_VERSION`
export DOCS_ADDRESS={{ds_frontend_docs_address}}
export API_VERSION={{api_version}}

eval "echo \"$(<config.js)\"" > /usr/share/nginx/html/config.js

rm -Rf build config.js {{frontend_artifact_id}}.zip
