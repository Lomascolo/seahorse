{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "invalidMessage": "Id is not a string with length of at least 1",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "invalidMessage": "Invalid name (not a string)",
      "requiredMessage": "Name is required"
    },
    "clusterType": {
      "type": "string",
      "enum": ["mesos", "standalone", "yarn"],
      "invalidMessage": "clusterType is not set to any of yarn|standalone|mesos",
      "requiredMessage": "clusterType is required"
    },
    "uri": {
      "type": "string",
      "minLength": 1,
      "format": "uri",
      "invalidMessage": "Uri is not a valid uri",
      "requiredMessage": "Uri is required"
    },
    "isEditable": {
      "type": "boolean",
      "default": true,
      "invalidMessage": "isEditable is not a boolean"
    },
    "isDefault": {
      "type": "boolean",
      "default": false,
      "invalidMessage": "isDefault is not a boolean"
    },
    "executorMemory": {
      "type": "number",
      "minimum": 0,
      "invalidMessage": "executorMemory is not a valid number > 0"
    },
    "executorCores": {
      "type": "integer",
      "minimum": 0,
      "invalidMessage": "executorCores is not a valid integer > 0"
    },
    "totalExecutorCores": {
      "type": "integer",
      "minimum": 0,
      "invalidMessage": "totalExecutorCores is not a valid integer > 0"
    },
    "params": {
      "type": "string",
      "invalidMessage": "params are not string"
    }
  },
  "required": [
    "name",
    "clusterType",
    "uri"
  ]
}
