{
  "name": "DeepSense.io",
  "version": "0.1.0",
  "private": true,
  "description": "DeepSense.io LAB application",
  "author": "CodiLime, Inc.",
  "license": "ISC",
  "homepage": "http://deepsense.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/codilime/deepsense-frontend.git"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "gulp start",
    "predev": "npm install",
    "dev": "gulp start --dev",
    "build": "gulp build",
    "tests:server": "node --harmony node_modules/jasmine-node/bin/jasmine-node server/ --captureExceptions --color",
    "tests:client": "karma start",
    "tests:e2e": "protractor"
  },
  "dependencies": {
    "body-parser": "^1.12.0",
    "express": "^4.11.0",
    "http-proxy": "latest",
    "q": "latest",
    "sails-disk": "^0.10.7",
    "sails-mysql": "^0.10.7",
    "waterline": "^0.10.16"
  },
  "devDependencies": {
    "angular": "^1.3.13",
    "angular-bootstrap": "^0.12.0",
    "angular-mocks": "^1.3.13",
    "angular-ui-router": "^0.2.13",
    "babelify": "^5.0.3",
    "bootstrap": "^3.3.2",
    "bower": "^1.3.12",
    "browser-sync": "^2.2.0",
    "browserify": "^8.1.1",
    "browserify-ngannotate": "^0.7.1",
    "browserify-shim": "^3.8.2",
    "gulp": "^3.8.10",
    "gulp-clean": "^0.3.1",
    "gulp-concat": "^2.5.1",
    "gulp-jshint": "^1.9.0",
    "gulp-less": "^3.0.0",
    "gulp-minify-css": "^0.4.6",
    "gulp-nodemon": "^1.0.5",
    "gulp-size": "^1.2.0",
    "gulp-uglify": "^1.1.0",
    "gulp-util": "^3.0.3",
    "http-server": "latest",
    "jasmine": "^2.1.1",
    "jasmine-core": "^2.2.0",
    "jasmine-node": "^1.14.5",
    "jshint-stylish": "^1.0.0",
    "karma": "^0.12.31",
    "karma-browserify": "^3.0.2",
    "karma-chrome-launcher": "^0.1.7",
    "karma-cli": "0.0.4",
    "karma-jasmine": "^0.3.5",
    "karma-phantomjs-launcher": "^0.1.4",
    "phantomjs": "^1.9.16",
    "protractor": "^1.7.0",
    "run-sequence": "^1.0.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.0.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "angular": "global:angular",
    "jsPlumb": "global:jsPlumb",
    "$": "global:$"
  },
  "files": {
    "build": {
      "path": "./build/",
      "js": "js/",
      "css": "css/",
      "fonts": "fonts/",
      "images": "img/",
      "bundle": {
        "app": "app.js",
        "js": "libs.js",
        "css": "libs.css"
      }
    },
    "client": {
      "path": "./client/",
      "app": "app/app.js",
      "js": "app/**/*.js",
      "less": "css/**/*.less",
      "html": "**/*.html",
      "fonts": "fonts/*",
      "images": "img/*"
    },
    "server": {
      "path": "./server/",
      "app": "app.js",
      "js": "**/*.js"
    },
    "libs": {
      "dev": {
        "js": [
          "./node_modules/angular/angular.js",
          "./node_modules/angular-ui-router/release/angular-ui-router.js",
          "./node_modules/angular-bootstrap/dist/ui-bootstrap.js",
          "./bower_components/jsPlumb/dist/js/dom.jsPlumb-1.7.4.js"
        ],
        "css": [
          "./node_modules/bootstrap/dist/css/bootstrap.css",
          "./client/css/*.css"
        ]
      },
      "prod": {
        "js": [
          "./node_modules/angular/angular.min.js",
          "./node_modules/angular-ui-router/release/angular-ui-router.min.js",
          "./node_modules/angular-bootstrap/dist/ui-bootstrap.min.js",
          "./bower_components/jsPlumb/dist/js/dom.jsPlumb-1.7.4-min.js"
        ],
        "css": [
          "./node_modules/bootstrap/dist/css/bootstrap.min.css",
          "./client/css/*.css"
        ]
      }
    },
    "tests": {
      "client": "./client/app/**/*.spec.js",
      "e2e": "./e2e-tests/**/*.spec.js"
    }
  },
  "env": {
    "dev": {
      "host": "http://localhost",
      "port": 8000
    }
  }
}
