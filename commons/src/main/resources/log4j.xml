<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%p] [%d] [%t] %x %c - %m%n"/>
    </layout>
  </appender>

  <appender name="file" class="org.apache.log4j.rolling.RollingFileAppender">
    <rollingPolicy name="file" class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
      <param name="FileNamePattern" value="${logFile}.%d{yyyy-MM-dd}.log" />
    </rollingPolicy>

    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%p] [%d] [%t] %x %c - %m%n" />
    </layout>
  </appender>

  <logger name="akka" >
    <level value="WARN"/>
  </logger>

  <logger name="com.datastax" >
    <level value ="WARN"/>
  </logger>

  <logger name="io.netty" >
    <level value ="WARN"/>
  </logger>

  <logger name="org.apache.cassandra" >
    <level value ="WARN"/>
  </logger>

  <logger name="org.apache.hadoop" >
    <level value ="WARN"/>
  </logger>

  <logger name="org.apache.spark" >
    <level value ="WARN"/>
  </logger>

  <logger name="org.cassandraunit" >
    <level value ="WARN"/>
  </logger>

  <logger name="org.spark-project" >
    <level value ="WARN"/>
  </logger>

  <logger name="parquet.hadoop" >
    <level value ="WARN"/>
  </logger>

  <root>
    <priority value ="debug" />
    <appender-ref ref="console" />
    <appender-ref ref="file" />
  </root>

</log4j:configuration>
